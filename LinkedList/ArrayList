package arraynpackage;

import java.util.ArrayList;

public class ArrayUse {
	

	public static void main(String[] args) {
		
		ArrayList<Integer> arr = new ArrayList<>();
		arr.add(10);
		arr.add(20);
		arr.add(30);
		arr.add(40);
		System.out.println(arr.size());
		System.out.println(arr.get(2));
//		this will add insert at some position and that position element
//		will shift to right and array size increase
		arr.add(2,60);
		System.out.println(arr.get(2));
//		to replace the element with another element
		arr.set(0, 5);
		System.out.println(arr.get(0));
//		to remove or delete any element from index and it will shift all element to left
		arr.remove(2);
		System.out.println(arr.get(2));
//		we can also remove a integer object if we need to remove a particular element
		Integer i = 20;
		arr.remove(i);
		System.out.println(arr.get(1));

	}

}
